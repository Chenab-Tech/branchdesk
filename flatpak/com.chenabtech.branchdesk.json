{
  "app-id": "com.chenabtech.BranchDesk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "BranchDesk",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "branchdesk",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 build/linux/x64/release/bundle/BranchDesk /app/bin/BranchDesk",
        "cp -r build/linux/x64/release/bundle/* /app/"
      ]
    }
  ]
}
